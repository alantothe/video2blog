{
  "name": "backend",
  "projectType": "application",
  "sourceRoot": "apps/backend/app",
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "PYTHONPATH=apps/backend:packages/shared/src:packages/utils/src uvicorn app.main:app --reload --host 0.0.0.0 --port 8000"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "flake8 apps/backend/app packages/shared/src packages/utils/src"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "PYTHONPATH=apps/backend:packages/shared/src:packages/utils/src pytest apps/backend/tests"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m compileall apps/backend/app"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/backend/Dockerfile -t ai-blog-backend:local ."
      }
    }
  }
}
