{
  "name": "@questurian/ai-blog-writer",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:docker",
    "dev:clean": "(lsof -ti:4003 -ti:3003 | xargs kill -9 2>/dev/null || true); npm install && pip install -r apps/backend/requirements.txt && nx run-many -t serve",
    "build": "nx run-many -t build",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "dev:docker": "docker compose up --build",
    "docker:build": "nx run-many -t docker-build"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.23.1",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@nxlv/python": "^19.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "nx": "^19.3.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1"
  }
}
